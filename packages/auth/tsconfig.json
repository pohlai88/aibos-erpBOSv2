{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./.cache/tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/.cache/**",
    "**/.turbo/**",
    "**/coverage/**",
    "**/build/**",
    "**/out/**"
  ]
}
