{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./.cache/tsconfig.tsbuildinfo",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src/**/*", "app/**/*", ".next/types/**/*.ts"],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/.cache/**",
    "**/.turbo/**",
    "**/coverage/**",
    "**/build/**",
    "**/out/**"
  ]
}
